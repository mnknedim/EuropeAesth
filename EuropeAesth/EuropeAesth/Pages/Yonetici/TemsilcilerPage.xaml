<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:Custom="clr-namespace:EuropeAesth.Custom"
             x:Class="EuropeAesth.Pages.TemsilcilerPage">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#02b294">
            <Custom:ExGrid>
                <ListView x:Name="LstTemsilci" ItemTapped="LstTemsilci_ItemTapped" ItemsSource="{Binding}" HeightRequest="50" RowHeight="100" Margin="0,75,0,0"
                          BackgroundColor="Transparent" SeparatorVisibility="None">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Custom:ExGrid  Margin="5,5,5,5">
                                    <BoxView BackgroundColor="Aqua" Margin="5,5,5,5" HeightRequest="250"></BoxView>
                                    <StackLayout Orientation="Horizontal" >
                                        <Image Source="ic_userLogo.png"  Margin="10" HeightRequest="75"></Image>
                                        <Label Text="{Binding AdSoyad}"
                                           FontSize="Large"
                                           FontAttributes="Bold"
                                           VerticalTextAlignment="Center"
                                           Margin="30,0"
                                           ></Label>
                                       
                                    </StackLayout>

                                </Custom:ExGrid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <Button x:Name="BtnGeri" Text="Geri" 
                            FontSize="Small" FontAttributes="Bold"
                            TextColor="#0a5e6b" BackgroundColor="Chocolate"
                            VerticalOptions="End" HorizontalOptions="End"  Margin="30" 
                            CornerRadius="35" HeightRequest="60" WidthRequest="60" Clicked="BtnGeri_Clicked"/>
            </Custom:ExGrid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>